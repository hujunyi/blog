<% @posts_decorator.each do |post_decorator| %>
  <article class="post">
  <header class="post-header">
  <span class="post-meta">
    <span><%= post_decorator.publication_date %></span>
  </span>
  <h2 class="post-title"><%=post_decorator.title%></h2>
  </header>
  <div>
    <% if signed_in? %>
      <%= link_to "Edit", edit_post_path(post_decorator.id) %>
      <%= link_to 'Destroy', post_path(post_decorator.id), method: :delete, confirm: 'Are you sure?' %>
    <% end %>
  </div>
  <section class="post-excerpt">
  <p>
  <%= markdown(post_decorator.content) %>
  </p>
  </section>
  </article>
<% end %>
