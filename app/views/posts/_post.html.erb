<%= form_for @post do |f| %>
  <p>
  <%= f.label :title %><br />
  <%= f.text_field :title %>
  </p>
  <p>
  <%= f.select(:category_id, options_from_collection_for_select(@categories,:id,:name,@post.category_id)) %>
  </p>
  <p>
  <%= f.text_area :content,size:"100*100" %>
  </p>
  <p class="button"><%= f.submit %></p>
<% end %>
